<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Abdul Rahman</Authors>
    <Company>Fingers10</Company>
    <Product>JqueryDataTablesServerSide.AspNetCore</Product>
    <Description>Simple and Powerful Dynamic Multiple Column Searching and Sorting along with Pagination and Excel Export for Jquery DataTables Asp.Net Core Server Side</Description>
    <Copyright>Fingers10</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/fingers10/JqueryDataTablesServerSide</PackageProjectUrl>
    <RepositoryUrl>https://github.com/fingers10/JqueryDataTablesServerSide</RepositoryUrl>
    <RepositoryType>Public</RepositoryType>
    <PackageTags>JqueryDataTables, Asp.Net Core, Server Side, Multiple Column, Dynamic, Searching, Sorting, Paging, Excel Export</PackageTags>
    <PackageId>JqueryDataTables.ServerSide.AspNetCoreWeb</PackageId>
    <PackageIcon>icon.png</PackageIcon>
    <Version>2.2.1</Version>
    <RootNamespace>JqueryDataTables.ServerSide.AspNetCoreWeb</RootNamespace>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>1. Added Support for DisplayAttribute
2. Applied Fixed to get properties from base class
3. Replaced IconUrl with PackageIcon</PackageReleaseNotes>
    <AssemblyName>JqueryDataTables.ServerSide.AspNetCoreWeb</AssemblyName>
    <AssemblyVersion>2.2.1.0</AssemblyVersion>
    <FileVersion>2.2.1.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ClosedXML" Version="0.94.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <None Include="Images\icon.png" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
